
<% breadcrumb :"new_consultation_#{resource_instance_name}", @consultation %>
<% content_for :top_title do %>

    <div class="col-md-5"><%= resource_class::NAME %></div>
    <div class="col-md-6 col-md-offset-1">
      <a href="#enter_score" id="" data-toggle="modal"><h4>(Click para introducir puntuación directamente)</h4></a>
    </div>
    <!-- Small modal -->
    <div class="modal fade" id="enter_score" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">

          <div class="modal-header text-center">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title">Introduzca la puntuación del test</h3>
          </div>

              <div class="modal-body">
                <div class="col-md-offset-4 col-md-4">
                  <input type="number" class="form-control"></input>
                  </div>
                <br>
              </div>

          <div class="modal-footer">
            <div class="col-md-8">
                <input type="submit" class="btn btn-info" value="Enviar"></button>
                <input type="submit" class="btn btn-default" value="Cerrar" data-dismiss="modal"></button>
            </div>
          </div>

        </div> <!--/modal-content-->
      </div>  <!--/modal-dialog-->
    </div> <!--/small-modal -->





<% end %>
<% content_for :title do %>
    <%= resource_class::NAME %>
<% end %>


<%= render 'form' %>

