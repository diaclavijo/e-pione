<%= form_for(@computer_diagnosis,
    builder: ApplicationHelper::MyFormBuilder,
    :html => {:class =>'form-horizontal'}
    ) do |f| %>

  <% if @computer_diagnosis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@computer_diagnosis.errors.count, "error") %> impidieron que se realizara este diagnóstico</h2>
      <ul>
      <% @computer_diagnosis.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :name, 'Nombre (*)' %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :surname, 'Apellido (*)' %>
      <%= f.text_field :surname %>
    </div>

    <div class="form-group">
      <%= f.label :birth, 'Fecha de nacimiento (*)' %>
      <%= f.date_select :birth, start_year: 1900 %>
    </div>

    <div class="form-group">
      <%= f.label :gender, 'Sexo' %>
      <%= f.dropdown :gender %>
    </div>

    <div class="form-group">
      <%= f.label :date,'Fecha consulta' %><br>
      <%= f.date_select :date %>
    </div>

    <div class="form-group">
      <%= f.label :education, 'Escolaridad' %>
      <%= f.select :education, Patient::EDUCATIONS , { include_blank: 'Seleccionar...' }, class:'form-control'%>
    </div>


    <div class="form-group">
      <%= f.label :name, 'Resultado Test FAQ (*)' %>
      <%= f.text_field :name %>
      <a href="view_of_FAQ.html">Realizar Test FAQ</a>
    </div>

    <div class="form-group">
      <%= f.label :name, 'Resultado Test MMSE (*)' %>
      <%= f.text_field :name %>
      <a href="view_of_mmse.html">Realizar Test MMSE</a>
    </div>

    <div class="form-group">
      <a href="view_of_mmse.html">Solicitar diagnóstico computacional</a>
    </div>


    <div class="form-group">
        <div class="actions">
            <%= f.submit %>
        </div>
    </div>
<% end %>
