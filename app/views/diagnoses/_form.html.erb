<%= form_for(@diagnosis,
    builder: ApplicationHelper::MyFormBuilder,
    :html => {:class =>'form-horizontal'}
    ) do |f| %>

  <% if @diagnosis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diagnosis.errors.count, "error") %> impidieron que se realizara este diagnóstico</h2>
      <ul>
      <% @diagnosis.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :activity,'Tipo atención' %><br>
      <%= f.select :activity, Consultation::ACTIVITY, { include_blank: 'Seleccionar...' } %>
    </div>
    <div class="form-group">
      <%= f.label :date,'Fecha consulta' %><br>
      <%= f.date_select :date %>
    </div>
    <div class="form-group">
        <div class="actions">
            <%= f.submit %>
        </div>
    </div>
<% end %>
