
<section class="intro">
  <div class="intro-body">
    <div class="container container-top">
      <% if flash[:notice] %>
          <br>
          <div class="alert alert-success alert-dismissable col-md-6 col-md-offset-3 lead text-center">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= flash[:notice] %>
          </div>
      <%end%>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <!--Carousel -->

          <ul class="bxslider">
            <li><%= image_tag 'logo_epione_large.png', class:'img-rounded img-responsive ' %></li>
            <li><%= image_tag 'screen1.png', class:'img-responsive img-rounded' %></li>
            <li><%= image_tag 'screen5.png', class:'img-responsive img-rounded' %></li>

          </ul>
          <!--/Carousel -->
          <br>
          <div class="page-scroll">
            <%= link_to "Solicitar una prueba", '#colaborate' ,class: 'btn btn-lg btn-primary btn-try' %>
          </div>

        </div>  <!--/col -->
      </div><!--/row-->

      <div class="row subtitle">
        <div class="col-md-8 col-md-offset-2">
          <h3 class=""> Diagnóstico preciso con la puntuación del FAQ y del MMSE, la edad y la educación del paciente</h3>
          <div class="page-scroll">
            <a href="#about" class=""></a>
          </div>
          <div class="page-scroll">
            <a href="#about" class="btn btn-circle">
              <i class="icon-double-angle-down animated"></i>
            </a>
          </div>   <!--/page scroll -->
        </div>    <!--/col-->
      </div>   <!--/col-->
    </div><!-- /container -->
     </div><!-- /intro-body-->

</section>


