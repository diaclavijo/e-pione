<div id='contact_form' class="col-md-5">
    <%= form_for(
            @contact_form,
            remote: true,
            html:{class:'form-horizontal'}

        ) do |f| %>
      <% if @contact_form.errors.any? %>
        <div class="alert alert-warning alert-dismissable col-md-6 col-md-offset-3 lead text-center">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          Por favor, rellene los campos (*)
        </div>
      <% end %>
      <% if @failed_send %>
          <div class="alert alert-danger alert-dismissable col-md-6 col-md-offset-3 lead text-center">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            Hubo un error tratando de enviar el email, por favor envie la solicitud a support@e-pione.com
          </div>
      <% end %>
      <div class="well well-lg well-contact">



      <div class="form-group">
        <div class="col-md-5 col-md-offset-1">
          <%= f.label :name, 'Nombre (*)' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, { class: 'form-control', placeholder: 'Nombre' } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-5 col-md-offset-1">
          <%= f.label :institution, 'Institución/Entidad' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :institution, { class: 'form-control', placeholder: 'Institución/Entidad' } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-5 col-md-offset-1">
          <%= f.label :email, 'Correo electrónico (*)' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :email, { class: 'form-control', placeholder: 'Correo' } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-5 col-md-offset-1">
          <%= f.label :message, 'Observaciones' %>
        </div>
        <div class="col-md-6">
          <%= f.text_area :message, { class: 'form-control', placeholder: '', rows: '2' } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-7 col-md-offset-5">
          <%= f.submit 'Solicita una prueba', class: 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
  </div><!--/well-->
  <h5 class="text-muted">Al enviar este formulario está de acuerdo con los
    <%= link_to 'Términos de privacidad', privacidad_path , class: 'text-muted' %></h5>
</div>



