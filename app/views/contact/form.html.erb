<%= form_for([@patient, @consultation] ,
             builder: ApplicationHelper::MyFormBuilder,
             :html => { :class => 'form-horizontal' } )  do |f| %>

    <% if @consultation.errors.any? %>
        <div id="error_explanation">
          <div class="<%= flash_class(:error) %>">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h3>Por favor, establezca el motivo de contacto en el recuadro inferior </h3>

          </div>
        </div>
    <% end %>

   <!--TODO: Falta cambiar todo esto por contact en vez de consultations...-->
    <div class="form-group">
      <%= f.label :activity,'Motivo de contacto' %><br>
      <%= f.select :activity, Consultation::ACTIVITY, { include_blank: 'Seleccionar...' } %>
    </div>

    <div class="form-group">
      <%= f.label :description,'Observaciones' %><br>
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
