<% content_for :title do %>
    Su cuenta
<% end %>

<% content_for :top_title do %>
    Su cuenta
<% end %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
             builder: ApplicationHelper::MyFormBuilder ,:html => { :method => :put, class:'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group">
        <%= f.label :name, 'Nombre' %>
		<%= f.text_field :name %>
    </div>

	<div class="form-group">
        <%= f.label :surname, 'Apellidos' %>
	    <%= f.text_field :surname %>
    </div>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true %>
    </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="form-group">
        <%= f.label :password ,'Contraseña' %>
        <%= f.password_field :password, :autocomplete => "off" %>
      <i>(dejala en blanco si no quieres cambiarla)</i>

    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmar contraseña' %>
        <%= f.password_field :password_confirmation %>
    </div>

  <div class="form-group">
    <%= f.label :current_password, 'Contraseña actual' %>
    <%= f.password_field :current_password %>
    <i>(se necesita para confirmar los cambios)</i>

  </div>
  <div class="form-group">
    <%= f.submit "Actualizar datos" %>
  </div>
<% end %>
<hr>
<div class="row text-center">
<h4>Cancelar cuenta</h4>
</div>
<div class="row text-center">
<%= button_to "Cancelar cuenta", registration_path(resource_name),
              :data => { :confirm => "¿Seguro? Está acción es irreversible" },
              :method => :delete,
              :class =>"btn btn-danger"%>
</div>

<%= link_to "", :back , class:"icon-double-angle-left icon-2x" %>
