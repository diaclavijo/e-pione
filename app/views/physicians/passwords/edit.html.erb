<div class="container text-center">
<h2>Cambiar contraseña</h2>
<hr>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name),
             :html => { :method => :put, class:'form-horizontal'}) do |f| %>

          <% if resource.errors.any? %>
              <div class='alert alert-warning alert-dismissable col-md-6 col-md-offset-3'>
                <button aria-hidden='true' class='close' data-dismiss='alert' type='button'>×</button>
                <ul class='list-unstyled'>

                  <li class='h4'>Introduzca su contraseña actual para modificar los cambios</li>
                </ul>
              </div>
          <% end %>

  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-4"><%= f.label :password, "Nueva contraseña" %></div>
    <div class="col-md-3"><%= f.password_field :password, :autofocus => true, class:'form-control' %></div>
  </div>

  <div class="form-group">
    <div class="col-md-2 col-md-offset-4"><%= f.label :password_confirmation, "Confirmar nueva contraseña" %></div>
    <div class="col-md-3"><%= f.password_field :password_confirmation, class:'form-control' %></div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-5 col-md-4"><%= f.submit "Cambiar contraseña", class:'btn btn-info' %></div>
  </div>
<% end %>

</div>