<!-- this expects a consultations set to render the consultations -->
<div class="jumbotron" id="jumbotron-consultations">
	<h4>Lista de consultas del paciente</h4>

	<div class="table-responsive">
		<table class="table table-striped table-hover">
			<tr>
				<th>NHC</th>
				<th>Fecha de consulta</th>
				<th>Tipo</th>
				<th>Facultativo</th>
				<th>Detalles</th>
			</tr>
			<% consultations.each do |consultation| %>
					<tr>
						<td><%= consultation.patient.id2 || t('no-nhc') %> </td>        <!-- NHC-->
						<td><%= consultation.date %>  </td>   <!-- Fecha de consulta-->
						<td><%= consultation.activity_text %></td>    <!-- Tipo-->
						<td><%= consultation.physician.full_name %></td> <!-- Facultativo-->
						<td><%= link_to 'Ver historia consulta', [consultation.patient, consultation] %></td>
						<!-- Historia-->
					</tr>
			<% end %>
		</table>
	</div>
 <!--/.responsive-table-->


</div>
<!-- /container -->




