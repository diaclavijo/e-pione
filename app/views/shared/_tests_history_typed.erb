<!--Jumbotron containing a table -->
<div class="jumbotron">

  <h4>Test Realizados</h4>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
			<% if tests.any? %>
				<tr>
					<th>NHC</th>
					<th>Fecha de consulta</th>
					<th>Categoria de Test</th>
					<th>Test</th>
					<th>Score</th>
					<th>Detalles</th>
				</tr>


				<% tests.each do |test| %>
						<tr>
							<td><%= test.patient.id2 || t('no-nhc') %></td>       <!-- NHC -->
							<td><%= test.consultation.date %></td>       <!-- Fecha de Consulta -->
							<td><%= test.category_text %></td>       <!-- Categoría de Test -->
							<td><%= t(test.test_data_type) %></td>       <!-- Test -->
							<td><%= test.score%></td>       <!-- Score -->
							<td><%= link_to 'Ver detalles' , [test.consultation, test.test_data]%> </td>       <!-- Detalles -->

						</tr>
				<% end %>

			<% else %>
				<i>
                  No se le ha realizado ningun test a este paciente. Para realizar un test, seleccione una de las categorías arriba descritas.
				Dentro encontrará los tests de esa categoría.
                </i>
                  <!-- TODO - revisa este mensaje y formato -->
			<% end %>

    </table>
  </div> <!--/.responsive-table-->

</div> <!--/jumbotron-->