<!--Jumbotron containing a table -->
<div class=" jumbotron   text-center" id="collapsable_jumbotron">

  <a data-toggle="collapse" data-parent="#collapsable_jumbotron" href="#collapsable_tests">
    <i class="fa fa-list fa-2x"> </i><h3> Lista tests realizados</h3>
  </a>
  <div id="collapsable_tests" class="collapse">

  <div class="table-responsive">
    <table class="table table-striped table-hover">
			<% if tests.any? %>
				<tr>
					<th>NHC</th>
					<th>Fecha de consulta</th>
					<th>Test</th>
					<th>Score</th>
					<th>Detalles</th>
				</tr>

				<% tests.each do |test| %>
						<tr>
							<td><%= test.patient.id2 || t('no-nhc') %></td>       <!-- NHC -->
							<td><%= test.consultation.date %></td>       <!-- Fecha de Consulta -->
							<td><%= t(test.test_data_type) %></td>       <!-- Test -->
							<td><%= test.score%></td>       <!-- Score -->
							<td><%= link_to 'Ver detalles' , [test.consultation, test.test_data]%> </td>       <!-- Detalles -->
						</tr>
				<% end %>

			<% else %>
				<i>
                  No se le ha realizado ningun test a este paciente. Para realizar un test, haga clic en los iconos situados encima de este mensaje.
                </i>
                  <!-- TODO - revisa este mensaje y formato -->
			<% end %>

    </table>
  </div> <!--/.responsive-table-->
        </div> <!--CollapseOne-->
</div> <!--/jumbotron-->