<%= form_for([@consultation, @human_diagnosis],
						 builder: ApplicationHelper::MyFormBuilder,
						 html: {class: 'form-horizontal'} ) do |f| %>

	<% if @human_diagnosis.errors.any? %>
		<div id="error_explanation">
			<div class="<%= flash_class(:error) %>">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<h3>Por favor, establezca el diagn√≥stico en el recuadro inferior </h3>
				<ul>
				</ul>
			</div>
		</div>
	<% end %>

	<div class="form-group">
      <%= f.label :diagnosis, 'Establecer' %>
      <%= f.select :diagnosis, HumanDiagnosis::DIAGNOSIS_OPTIONS %>
	</div>

    <div class="form-group">
      <%= f.label :observations, 'Observaciones' %>
      <%= f.text_area :observations %>
    </div>

	<div class="form-group">
      <div class="col-md-10">
		<div class="actions">
			<%= f.submit %>
		</div>
      </div>
	</div>

<% end %>