%p
  .row
    .col-md-1
      Age:
      %span
        %strong
          = @fototest.age
    .col-md-2
      Education:
      %span
        %strong
          = @fototest.education
.table-responsive
%table.table.table-condensed.table-bordered{border: '0', summary: 'Formulario del Fototest: resultados obtenidos', width: '90%'}
  %caption.h4 Phototest - Test of the photos: Results
  %thead
    %tr.active
      %th{width: '15ex'} Category
      %th{width: '10ex'} Photos
      %th{width: '7ex'} Den
      %th{width: '7ex'} FR
      %th{width: '7ex'} AR
      %th{width: '50ex'} Verbal fluency men (VFM)
      %th{width: '50ex'} Verbal mujeres (VFW)
  %tbody
    %tr
      %td Game
      %td Cards
      %td= @fototest.cartas1
      %td= @fototest.cartas2
      %td= @fototest.cartas3
      %td{rowspan: '6'}
      %td{rowspan: '6'}
    %tr
      %td Vehicle
      %td Car
      %td= @fototest.coche1
      %td= @fototest.coche2
      %td= @fototest.coche3
    %tr
      %td Fruit
      %td Pear
      %td= @fototest.pera1
      %td= @fototest.pera2
      %td= @fototest.pera3
    %tr
      %td Musical inst.
      %td Trumpet
      %td= @fototest.trompeta1
      %td= @fototest.trompeta2
      %td= @fototest.trompeta3
    %tr
      %td Piece of clothing
      %td Shoes
      %td= @fototest.zapatos1
      %td= @fototest.zapatos2
      %td= @fototest.zapatos3
    %tr
      %td Cutlery
      %td Spoon
      %td= @fototest.cuchara1
      %td= @fototest.cuchara2
      %td= @fototest.cuchara3
    %tr
      %td{colspan: '2'} Subtotals
      %td= @fototest.deno
      %td= @fototest.rl
      %td= @fototest.rf
      %td= @fototest.total_hombres
      %td= @fototest.total_mujeres
    %tr
      %td.h4.text-right{colspan: '6'} Phototest total(Den + FR + AR + VFM + VFW)
      %td.h4= @fototest.total
- message_kind_ft = @fototest.sane? ?  "alert-success" : "alert-danger"
%p{class: "alert #{message_kind_ft} alert-dismissable lead text-center"}
  #{@fototest.diagnosis_text} - probability #{@fototest.probability}
%hr
.row
  .col-md-2.col-md-offset-4
    %input.btn.btn-info.btn-block{onclick: "parent.location='#{new_fototest_path}'", type: 'button', value: 'New test'}/
  .col-md-2
    %input.btn.btn-default.btn-block{onclick: 'window.print()', type: 'button', value: 'Imprimir'}/
%br